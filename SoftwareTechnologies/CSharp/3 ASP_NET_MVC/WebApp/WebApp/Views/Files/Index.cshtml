
@{
    ViewBag.Title = "Files";
}

<h1>Files</h1>
<form>
    Path: 
    <input type="text" name="path"/>
    <input type="submit" value="Submit"/>
</form>

<h2>Listing files in @ViewBag.Path</h2>
@model List<string>

<div>
    <a href="\Files\Index\?path=@ViewBag.ParentFolder">Parent Folder</a>
</div>

@foreach (var file in Model)
{
    <div>
        <a href="\Files\Index\?path=@file">@file</a>
    </div>
   
}
